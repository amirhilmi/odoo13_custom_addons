<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id='student_tree_view' model='ir.ui.view'>
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="charity_amount"/>
                <field name="charity_channel"/>
                <field name="personInCharge"/>
                <field name="note"/>
            </tree>
        </field>
    </record>

    <record id='student_form_view' model ='ir.ui.view'>
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Students">
                

                <header> ... content of the status bar  ... </header>

                <sheet>
                    <div class="oe_title">

                            <!-- <label for="charity_amount" class="oe_edit_only"/>
                            <h1><field name="charity_amount" placeholder="e.g. Update order quantity"/></h1>
                             -->
                            <label for="charity_amount" />
                            <h1><field name="charity_amount"/></h1>
                    </div>

                    <group>
                        <group>

                            <field name="charity_channel"/>
                            <field name="personInCharge"/>
                            <field name ="date_of_collection"/>
                            <field name="note"/>

                            
                            <field name="image" widget="image" class="joe_avatar"/>


                        </group>                        
                    </group>
                    <!-- <label for="charity_amount" />
                    <field name="image" widget="image" class="joe_avatar"/> -->

                </sheet>



                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}' />
                </div>

            </form>
        </field>
    </record>






    <!-- action of charity details menu -->

    <record id="action_student" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student</field>

        <!-- <field name="view_type">form</field> -->    <!-- in v13 not needed -->
            
        <field name="view_mode">tree,form</field>

        <field name="context">{}</field>
        <field name="domain">[]</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Students here.
            </p>
        </field>
    </record>


    <menuitem   id="school_root_menu" 
                name="School"
                web_icon="om_school, static/description/icon.png"
                sequence="7"/>


    <menuitem   id="school_student_menu" 
                name="Students" 
                parent="school_root_menu" 
                action="action_student" 
                sequence="10"/>



</odoo>