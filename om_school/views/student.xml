<?xml version="1.0" encoding="utf-8"?>
<odoo>

    
    <record id='student_tree_view' model='ir.ui.view'>
        <field name="name">school.student.tree</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <tree string="Students">
                <field name="name"/>
                <field name="age"/>
                <field name="guardian">
            </tree>
        </field>
    </record>

    <record id='student_form_view' model ='ir.ui.view'
        <field name="name">school.student.form</field>
        <field name="model">school.student</field>
        <field name="arch" type="xml">
            <form string="Students">
                
                <sheets>
                    <field name="image" widget="image" class="joe_avatar"/>
                    <div class="oe_title"
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <group>
                        <group>
                            <field name = "gender"/>
                        </group>
                        <group>
                            <field name = "age"/>
                            <field name = "guardian"/>
                        </group>                        
                    </group>
                </sheet>

                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options='{"thread_level": 1}' />
                </div>

            </form>
        </field>
    </record>






    <!-- action of charity details menu -->

    <record id="action_student2" model="ir.actions.act_window">
        <field name="name">Students</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">school.student2</field>

        <!-- <field name="view_type">form</field> -->    <!-- in v13 not needed -->
            
        <field name="view_mode">tree,form</field>
        <field name="view_mode">form</field>

        <field name="context">{}</field>
        <field name="domain">{}</field>

        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create Students here.
            </p>
        </field>
    </record>


    <menuitem   id="school_root_menu" 
                name="School"
                web_icon="om_school, static/description/icon.png"
                sequence="7"/>


    <menuitem   id="school_student_menu" 
                name="Students" 
                parent="school_root_menu" 
                action="action_student" 
                sequence="10"/>



</odoo>